{
  "root": {
    "include": "./src/**/*",
  },
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "strict": true,
    "alwaysStrict": true,

    "baseUrl": ".",
    "paths": {
      "@localTypes/*": ["./types/*"],
    }
  }
}